<h3 style="color: #16A085;"><% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %></h3>

<h1>Add an item to your home inventory</h1>
<form action="/items" method="POST">
  <label for="name">Item:</label>
  <input type="text" id="name" name="item[name]">
  <br>
  <label for="cost">Cost: $</label>
  <input type="text" id="cost" name="item[cost]">
  <br>
  <button type="submit" value="add_item">Add Item</button>
</form>
